<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd">

    
    <bean  name="T1" class="ua.rd.pizzaservice.services.Test2SomeService"/>

    <bean name="pizzaService" class="ua.rd.pizzaservice.services.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>
    
    <bean name="orderService" class="ua.rd.pizzaservice.services.SimpleOrderService">
        <constructor-arg ref="pizzaService"/>
        <constructor-arg ref="orderRepository"/>
    </bean>
    
    <bean class="ua.rd.pizzaservice.services.UsageSomeService" init-method="init">
        <constructor-arg>
            <bean name="AAA" class="ua.rd.pizzaservice.services.Test2SomeService"/>
        </constructor-arg>
    </bean>
    
</beans>