<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">



    <bean name="order" class="ua.rd.pizzaservice.domain.Order" scope="prototype"/>

    <bean name="pizzaService" class="ua.rd.pizzaservice.services.SimplePizzaService" autowire="constructor"/>

    <bean name="orderService" class="ua.rd.pizzaservice.services.SimpleOrderService" autowire="constructor">
        <lookup-method name="createNewOrder" bean="order"/>
    </bean>


</beans>